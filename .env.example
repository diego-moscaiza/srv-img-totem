# .env
IMAGENES_DIR=imagenes

# URL del servidor de catálogos
# Opciones:
#   - http://192.168.1.35:8000          (desarrollo local con IP de ejemplo)
SERVER_URL=http://192.168.1.65:8000

# SQLite Database Configuration
# IMPORTANTE: La BD se configura automáticamente según el entorno:
#
# DESARROLLO LOCAL (con .env):
#   DATABASE_URL=sqlite:///./data/catalogos.db
#   - Crea/usa la BD en la raíz del proyecto
#
# DOCKER (Producción):
#   DATABASE_URL=sqlite:////srv/data/catalogos.db
#   - Usa volumen persistente en /srv/data (definido en docker-compose.yml)
#   - El sistema detecta automáticamente si está en Docker
#
# FALLBACK (sin .env):
#   Usa ./catalogos.db en la raíz del proyecto

DATABASE_URL=sqlite:///./data/catalogos.db